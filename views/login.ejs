<!DOCTYPE html>
<html>

<head>
    <title>Login/Signup Form</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="styles.css">
    <style>
        body {
            background: url('https://cdn.waifu.im/7559.png') no-repeat center center fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            width: 90%;
            max-width: 600px;
        }

        @media screen and (min-width: 600px) {
            .container {
                max-width: 1000px;
            }
        }

        .form-container {
            margin-top: 2rem;
        }

        .form-content {
            padding: 4rem 2rem;
        }

        h5 {
            margin-bottom: 2rem;
        }

        .btn {
            width: 100%;
            margin-bottom: 10px;
        }

        .google-btn {
            background-color: #dd4b39;
            color: white;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col s12 m6 offset-m3 form-container">
                <ul class="tabs teal">
                    <li class="tab col s6"><a class="white-text active" href="#login">Login</a></li>
                    <li class="tab col s6"><a class="white-text" href="#signup">Signup</a></li>
                </ul>
                <div id="login" class="col s12 form-content">
                    <div class="card-panel">
                        <h5>Login</h5>
                        <form>
                            <div class="input-field">
                                <input id="login_username" type="text" class="validate">
                                <label for="login_username">Username</label>
                            </div>
                            <div class="input-field">
                                <input id="login_password" type="password" class="validate">
                                <label for="login_password">Password</label>
                            </div>
                            <button class="btn waves-effect waves-light teal darken-1" type="submit"
                                name="action">Submit</button>
                           <a href="/login/federated/google"><button class="btn waves-effect waves-light red darken-1 google-btn" type="button"
                                name="action"><i class="fa fa-google left"></i> Sign in with Google</button></a>
                        </form>
                    </div>
                </div>
                <div id="signup" class="col s12 form-content">
                    <div class="card-panel">
                        <h5>Signup</h5>
                        <form>
                            <div class="input-field">
                                <input id="signup_username" type="text" class="validate">
                                <label for="signup_username">Username</label>
                            </div>
                            <div class="input-field">
                                <input id="signup_email" type="email" class="validate">
                                <label for="signup_email">Email</label>
                            </div>
                            <div class="input-field">
                                <input id="signup_password" type="password" class="validate">
                                <label for="signup_password">Password</label>
                            </div>
                            <button class="btn waves-effect waves-light teal darken-1" type="submit"
                                name="action">Submit</button>
                            <button class="btn waves-effect waves-light red darken-1 google-btn" type="button"
                                name="action"><i class="fa fa-google left"></i> Sign up with Google</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var elems = document.querySelectorAll('.tabs');
            var instances = M.Tabs.init(elems);
        });
    </script>
</body>

</html>